<aura:component>
    <aura:attribute access="public" name="oRecord" type="SObject"/>
    <!--Register the component level event-->
    <aura:registerEvent name="oSelectedSObjectEvent" type="c:sflib_InputLookUpEvent"/>

    <li role="presentation">
        <div class="slds-lookup__item-action slds-media slds-media--center" id="lookup-option-350" role="option">
            <div class="slds-media__body">
                <div class="slds-input-has-icon slds-input-has-icon--right">
                    <!--<c:svg class="slds-input__icon" xlinkHref="{!$Resource.SLDS24 + '/assets/icons/standard-sprite/svg/symbols.svg#account'}" />-->
                    <div class="slds-lookup__result-text"><a onclick="{!c.selectSObject}">{!v.oRecord.Name}</a></div>
                </div>
            </div>
        </div>
    </li>
</aura:component>
